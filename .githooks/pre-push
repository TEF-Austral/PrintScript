#!/bin/bash

  # This script runs before every 'git push'

  echo "Running gradlew build..."

  # Run the Gradle 'build' task
  # The 'set -e' command ensures the script exits if the command fails
  ./gradlew build

  # Check the result of the previous command
  if [ $? -ne 0 ]; then
    echo "❌ Gradle build failed. Aborting push."
    exit 1
  else
    echo "✅ Gradle build passed successfully. Proceeding with push."
    exit 0
  fi